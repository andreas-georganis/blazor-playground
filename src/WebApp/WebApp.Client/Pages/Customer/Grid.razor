@using BlazorPlayground.Contracts

<div class="d-flex justify-content-between align-items-center mb-2">
    <h3>Customers</h3>
    <button class="btn btn-success" @onclick="Add">New Customer</button>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Company</th>
            <th>Contact</th>
            <th>Address</th>
            <th>City</th>
            <th>Region</th>
            <th>Postal Code</th>
            <th>Country</th>
            <th>Phone</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Result.Items is null || Result.Items.Count == 0)
    {
        <tr>
            <td colspan="9">No customers found.</td>
        </tr>
    }
    else
    {
        @foreach (var c in Result.Items)
        {
            <tr>
                <td>@c.CompanyName</td>
                <td>@c.ContactName</td>
                <td>@c.Address</td>
                <td>@c.City</td>
                <td>@c.Region</td>
                <td>@c.PostalCode</td>
                <td>@c.Country</td>
                <td>@c.Phone</td>
                <td>
                    <button class="btn btn-sm btn-primary me-1" @onclick="() => Edit(c)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => Delete(c)">Delete</button>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

<Pager Result="Result"
       PageChanged="PageChanged" />

@code {
    [Parameter] public PagedResult<CustomerResource> Result { get; set; } = default!;

    [Parameter] public EventCallback OnAdd { get; set; }
    [Parameter] public EventCallback<CustomerResource> OnEdit { get; set; }
    [Parameter] public EventCallback<CustomerResource> OnDelete { get; set; }
    [Parameter] public EventCallback<int> PageChanged { get; set; }

    private async Task Add() => await OnAdd.InvokeAsync();
    private async Task Edit(CustomerResource customer) => await OnEdit.InvokeAsync(customer);
    private async Task Delete(CustomerResource customer) => await OnDelete.InvokeAsync(customer);
}